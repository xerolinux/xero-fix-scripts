#!/bin/bash
#set -e
##################################################################################################################
# Written to be used on 64 bits computers
# Author 	: 	DarkXero
# Website 	: 	http://xerolinux.xyz
##################################################################################################################
echo
echo "Removing Current Display Manager (KDE Only)"
echo "###########################################"
sudo pacman -Rdd --noconfirm lightdm &>/dev/null; sudo pacman -Rdd --noconfirm lightdm-gtk-greeter &>/dev/null; sudo pacman -Rdd --noconfirm lightdm-gtk-greeter-settings &>/dev/null; sudo pacman -Rdd --noconfirm gdm &>/dev/null
echo
sleep 2
echo "Installing & Enabling SDDM"
echo "##########################"
yay -S sddm-git --noconfirm
sudo pacman -S sddm-kcm --needed --noconfirm
sleep 2
sudo systemctl enable sddm.service -f
echo "############################X#####"
echo "SDDM is now active - Please Reboot"
echo "############################X#####"
sleep 3
